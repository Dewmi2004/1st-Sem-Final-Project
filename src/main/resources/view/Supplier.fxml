<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600" prefWidth="800"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.aquariumfinal.controller.SupplierPageController"
            style="-fx-background-color: linear-gradient(to bottom right, #d1d8e0, #a3b1c6);">

   <children>
      <VBox spacing="10" alignment="TOP_CENTER"
            AnchorPane.topAnchor="10.0" AnchorPane.bottomAnchor="10.0"
            AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">

         <!-- Title -->
         <Label text="Supplier Management"
                style="-fx-font-size: 22px; -fx-text-fill: #2c3e50; -fx-font-weight: bold;" />

         <!-- Supplier ID display -->
         <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Supplier ID:"
                   style="-fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-font-size: 14px;" />
            <Label fx:id="lblSupplierId" text="Auto-generated"
                   style="-fx-text-fill: #2c3e50; -fx-font-size: 14px;" />
         </HBox>

         <!-- Form Section -->
         <GridPane hgap="15" vgap="15">
            <children>
               <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                      style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;" />
               <TextField fx:id="txtName" promptText="John Supplier" prefWidth="300"
                          style="-fx-background-color: white; -fx-border-color: black; -fx-border-width: 0 0 1 0;"
                          GridPane.rowIndex="0" GridPane.columnIndex="1" />

               <Label text="Contact:" GridPane.rowIndex="1" GridPane.columnIndex="0"
                      style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;" />
               <TextField fx:id="txtContact" promptText="+94 71 234 5678" prefWidth="300"
                          style="-fx-background-color: white; -fx-border-color: black; -fx-border-width: 0 0 1 0;"
                          GridPane.rowIndex="1" GridPane.columnIndex="1" />

               <Label text="Company Address:" GridPane.rowIndex="2" GridPane.columnIndex="0"
                      style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;" />
               <TextField fx:id="txtAddress" promptText="123 Marine Lane, Colombo" prefWidth="300"
                          style="-fx-background-color: white; -fx-border-color: black; -fx-border-width: 0 0 1 0;"
                          GridPane.rowIndex="2" GridPane.columnIndex="1" />

               <Label text="Supply Type:" GridPane.rowIndex="3" GridPane.columnIndex="0"
                      style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;" />
               <ComboBox fx:id="CBoxSupplyType" promptText="Fish / Plants / Chemicals" prefWidth="300"
                         GridPane.rowIndex="3" GridPane.columnIndex="1" />

               <Label text="Email:" GridPane.rowIndex="4" GridPane.columnIndex="0"
                      style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;" />
               <TextField fx:id="txtEmail" promptText="supplier@example.com" prefWidth="300"
                          style="-fx-background-color: white; -fx-border-color: black; -fx-border-width: 0 0 1 0;"
                          GridPane.rowIndex="4" GridPane.columnIndex="1" />
            </children>
         </GridPane>

         <!-- Buttons Section -->
         <HBox alignment="CENTER_LEFT" spacing="12">
            <Button fx:id="btnSave1" onAction="#btnSaveOnAction"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;"
                    text="Save" />
            <Button fx:id="btnUpdate1" onAction="#btnUpdateOnAction"
                    style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold;"
                    text="Update" />
            <Button fx:id="btnDelete1" onAction="#btnDeleteOnAction"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;"
                    text="Delete" />
            <Button fx:id="btnReset1" onAction="#btnResetOnAction"
                    style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-font-weight: bold;"
                    text="Reset" />
            <Button fx:id="btnGenerateR1" onAction="#btnGenerateROnAction"
                    style="-fx-background-color: #1a237e; -fx-text-fill: white; -fx-font-weight: bold;"
                    text="Generate Report" />
         </HBox>

         <!-- Table Section -->
         <TableView fx:id="tblSupplier" VBox.vgrow="ALWAYS"
                    style="-fx-background-color: #f0f3f7; -fx-border-color: #7f8c8d;">
            <columns>
               <TableColumn fx:id="colSupplierId" text="Supplier ID" />
               <TableColumn fx:id="colName" text="Name" />
               <TableColumn fx:id="colContact" text="Contact" />
               <TableColumn fx:id="colCompanyAddress" text="Company Address" />
               <TableColumn fx:id="colSupplyType" text="Supply Type" />
               <TableColumn fx:id="colEmail" text="Email" />
            </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
         </TableView>

      </VBox>
   </children>
</AnchorPane>
